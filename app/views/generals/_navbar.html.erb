<% if controller.action_name == 'index' &&  controller_name == 'estimates'%>
  <% step_1 = true %>
  <% step_2 = false %>
  <% step_3 = false %>
<% elsif params[:service_name] == Estimate::OTRAS_OPCIONES %>
  <% step_1 = false %>
  <% step_2 = false %>
  <% step_3 = true %>
<% elsif params[:service_name] == Estimate::CREMACION || params[:service_name] == Estimate::INHUMACION %>
  <% step_1 = true %>
  <% step_2 = false %>
  <% step_3 = false %>
<% elsif params[:service_name] == Estimate::REPATRIACION %>
  <% step_1 = false %>
  <% step_2 = true %>
  <% step_3 = false %>
<% elsif step.to_s == 'step_one' %>
  <% step_1 = false %>
  <% step_2 = true %>
  <% step_3 = false %>
<% else  step.to_s == 'step_two'%> 
  <% step_1 = false %>
  <% step_2 = false %>
  <% step_3 = true %>
<% end %>


<nav class="container navbar navbar-light bg-light text-center text-secondary py-2 my-4">
  <div class="col-md-4 col-4">
    <span class="<%= step_1 == true ? 'step-active' : ''%>">1</span>
  </div>
  <div class="col-md-4 col-4">
    <span class="<%= step_2 == true ? 'step-active' : '' %>">2</span>
  </div>
  <div class="col-md-4 col-4">
    <span class="<%= step_3 == true ? 'step-active' : ''%>">3</span>
  </div>
</nav>