<p class=" h5 text-secondary text-center font-italic"> Quiero que la ceremonia sea una...</p>
<div class="card-group container pb-4">
  <% @services.each do |service| %>
    
    <% if service.name == Estimate::CREMACION%>
      <%  image = 'cremacion.jpg'%>
    <% elsif service.name == Estimate::INHUMACION %>
      <%  image = 'inhumacion.jpg'%>
    <% elsif service.name == Estimate::REPATRIACION %>
      <%  image = 'repatriacion.png'%>
    <% elsif service.name == Estimate::OTRAS_OPCIONES %>
      <%  image = 'other_options.jpg'%>
    <% end %>

    <div class="card border-white text-center m-2">
      <%= link_to new_estimate_path(service_id: service.id, service_name: service.name)do %>
        <%= image_tag(image, class: 'card-img-top') %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title text-secondary"><%= service.name %></h5>
      </div>
    </div>
  <% end %>
  
</div>