<div class="card-group container pb-4">
  <% @services.each do |service| %>
    
    <% if service.name == 'Cremación'%>
      <%  image = 'cremacion.jpg'%>
    <% elsif service.name == 'Inhumación' %>
      <%  image = 'inhumacion.jpg'%>
    <% elsif service.name == 'Traslado o repatriación' %>
      <%  image = 'repatriacion.png'%>
    <% elsif service.name == 'Otras opciones'%>
      <%  image = 'other_options.jpg'%>
    <% end %>
    

    <div class="card border-white text-center m-4 ">
      <%= link_to nuevo_presupuesto_path(service_id: service.id) do %>
        <%= image_tag(image, class: 'card-img-top') %>
      <% end %>
      
      <div class="card-body">
        <h5 class="card-title text-secondary"><%= service.name %></h5>
      </div>
    </div>
  <% end %>
  
</div>