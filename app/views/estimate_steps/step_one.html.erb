<div class="container py-4 mb-3">
  <%  if @estimate_form.errors.any?  %>
    <div class="error_messages">
      <h2><%= pluralize(@estimate_form.errors.count, "error") %> prohibe que esta cotizaci√≥n sea realizada:</h2>
      <ul>
        <%= @estimate_form.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2 class="main-green"> Opciones </h2>  
  <%= form_for @estimate_form, url: wizard_path do |f| %>
    <%= hidden_field_tag :estimate_id, @estimate_form.id %>
    <div class="mb-3 ">
        <%= f.select :plan_id, options_from_collection_for_select(@plans, :id, :feretro), {prompt: "Seleccionar plan"}, { class: 'form-control' } %>
      <div class="text-center pt-3">
        <%= link_to 'Volver', new_estimate_path(service_id: @estimate_form.service_id, service_name: @estimate_form.service.name ), :class => 'btn bg-main-green text-light px-20' %>
        <%= link_to 'Continuar', next_wizard_path(estimate_id: @estimate_form.id), :class => 'btn bg-main-green text-light px-20' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
